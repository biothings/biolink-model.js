{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "composite": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__tests__/"]
}
